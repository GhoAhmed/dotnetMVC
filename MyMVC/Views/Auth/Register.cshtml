<form>
    <div class="mb-3 text-center">
        <img src="~/images/agent.png" alt="LocaSmart Logo" class="img-fluid" style="max-width: 100px;" />
    </div>
    <h3 class="text-center">Register</h3>
    <div class="mb-3">
        <label for="registerEmail" class="form-label">Email:</label>
        <input type="email" class="form-control" id="registerEmail" name="Email" required />
    </div>
    <div class="mb-3">
        <label for="registerPassword" class="form-label">Password:</label>
        <input type="password" class="form-control" id="registerPassword" name="Password" required />
    </div>
    <div class="mb-3">
        <label for="confirmPassword" class="form-label">Confirm Password:</label>
        <input type="password" class="form-control" id="confirmPassword" name="ConfirmPassword" required />
    </div>
    <div class="mb-3">
        <label class="form-check-label">Register as:</label>
        <div class="form-check">
            <input type="radio" class="form-check-input" id="registerLessor" name="RegisterAs" value="lessor"
                required />
            <label class="form-check-label" for="registerLessor">Lessor</label>
        </div>
        <div class="form-check">
            <input type="radio" class="form-check-input" id="registerRenter" name="RegisterAs" value="renter"
                required />
            <label class="form-check-label" for="registerRenter">Renter</label>
        </div>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Register</button>
    </div>
</form>